{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@configs": ["../../configs"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/dist"],
      "@btc/shared-core/*": ["../../packages/shared-core/dist/*"],
      "@btc/shared-components": ["../../packages/shared-components/dist"],
      "@btc/shared-components/*": ["../../packages/shared-components/dist/*"],
      "@btc/shared-utils": ["../../packages/shared-utils/dist"],
      "@btc/shared-utils/*": ["../../packages/shared-utils/dist/*"],
      "@btc/subapp-manifests": ["../../packages/subapp-manifests/dist"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "../../configs/**/*.ts",
    "../../packages/shared-core/src/btc/plugins/i18n/locales/**/*.ts",
    "../../packages/shared-components/src/locales/**/*.json",
    "../../apps/monitor-app/src/app.ts"
  ],
  "exclude": ["node_modules", "dist", "../../packages/**/dist/**", "**/dist/**"]
}

