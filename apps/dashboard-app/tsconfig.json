{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@configs": ["../../configs"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/src", "../../packages/shared-core/dist"],
      "@btc/shared-core/*": ["../../packages/shared-core/src/*", "../../packages/shared-core/dist/*"],
      "@btc/shared-components": ["../../packages/shared-components/src", "../../packages/shared-components/dist"],
      "@btc/shared-components/*": ["../../packages/shared-components/src/*", "../../packages/shared-components/dist/*"],
      "@btc/shared-utils": ["../../packages/shared-utils/src", "../../packages/shared-utils/dist"],
      "@btc/shared-utils/*": ["../../packages/shared-utils/src/*", "../../packages/shared-utils/dist/*"],
      "@btc/subapp-manifests": ["../../packages/subapp-manifests/src", "../../packages/subapp-manifests/dist"],
      "@btc/subapp-manifests/*": ["../../packages/subapp-manifests/src/*", "../../packages/subapp-manifests/dist/*"],
      "@btc-components/*": ["../../packages/shared-components/src/components/*"],
      "@btc-common/*": ["../../packages/shared-components/src/common/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "../../configs/**/*.ts",
    "../../apps/*/src/app.ts",
    "../../types/**/*.d.ts",
    "../../packages/shared-core/src/**/*.ts",
    "../../packages/shared-core/src/**/*.tsx",
    "../../packages/shared-core/src/**/*.vue",
    "../../packages/shared-components/src/**/*.ts",
    "../../packages/shared-components/src/**/*.tsx",
    "../../packages/shared-components/src/**/*.vue",
    "../../packages/shared-utils/src/**/*.ts",
    "../../packages/shared-utils/src/**/*.tsx",
    "../../packages/subapp-manifests/src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "../../packages/**/dist", "../../packages/**/dist/**"]
}
