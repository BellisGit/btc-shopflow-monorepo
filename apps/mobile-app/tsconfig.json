{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@db/*": ["src/db/*"],
      "@pwa/*": ["src/pwa/*"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/src"],
      "@btc/shared-core/*": ["../../packages/shared-core/src/*"],
      "@btc/shared-components": ["../../packages/shared-components/src"],
      "@btc/shared-components/*": ["../../packages/shared-components/src/*"],
      "@btc/shared-utils": ["../../packages/shared-utils/src"],
      "@btc/shared-utils/*": ["../../packages/shared-utils/src/*"],
      "@charts-types/*": ["../../packages/shared-components/src/charts/types/*"],
      "@charts-utils/*": ["../../packages/shared-components/src/charts/utils/*"],
      "@charts-composables/*": ["../../packages/shared-components/src/charts/composables/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/env.d.ts", "src/components.d.ts"],
  "exclude": ["node_modules", "dist", "../../packages/**/dist", "../../packages/**/*.d.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

