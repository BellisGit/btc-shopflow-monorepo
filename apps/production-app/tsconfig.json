{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@configs": ["../../packages/shared-core/src/configs"],
      "@configs/*": ["../../packages/shared-core/src/configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/dist/src"],
      "@btc/shared-core/*": ["../../packages/shared-core/dist/*", "../../packages/shared-core/dist/src/*"],
      "@btc/shared-components": ["../../packages/shared-components/dist"],
      "@btc/shared-components/*": ["../../packages/shared-components/dist/*"],
      "@btc/shared-utils": ["../../packages/shared-utils/dist"],
      "@btc/shared-utils/*": ["../../packages/shared-utils/dist/*"],
      "@btc/subapp-manifests": ["../../packages/subapp-manifests/dist"],
      "@btc/subapp-manifests/*": ["../../packages/subapp-manifests/dist/*"],
      "@btc/auth-shared": ["../../auth/shared"],
      "@btc/auth-shared/*": ["../../auth/shared/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "../../configs/**/*.ts",
    "../../configs/**/*.d.ts",
    "../../apps/**/src/app.ts",
    "../../packages/shared-core/dist/**/*.d.ts",
    "../../packages/shared-utils/dist/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "../../packages/shared-core/src/**/*.ts", "../../packages/shared-components/src/**", "../../packages/shared-utils/src/**", "../../packages/subapp-manifests/src/**", "../../packages/vite-plugin/src/**", "../../auth/**", "../../packages/**/dist/**/*.js", "../../packages/**/dist/**/*.mjs"]
}

