{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@configs": ["../../configs"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/src", "../../packages/shared-core/dist"],
      "@btc/shared-core/*": ["../../packages/shared-core/src/*", "../../packages/shared-core/dist/*"],
      "@btc/shared-components": ["../../packages/shared-components/src", "../../packages/shared-components/dist"],
      "@btc/shared-components/*": ["../../packages/shared-components/src/*", "../../packages/shared-components/dist/*"],
      "@btc/shared-components/components/*": ["../../packages/shared-components/src/components/*"],
      "@btc/shared-components/common/*": ["../../packages/shared-components/src/common/*"],
      "@btc/shared-components/crud/*": ["../../packages/shared-components/src/crud/*"],
      "@btc/shared-components/store/*": ["../../packages/shared-components/src/store/*"],
      "@btc/shared-components/composables/*": ["../../packages/shared-components/src/composables/*"],
      "@btc/shared-components/utils/*": ["../../packages/shared-components/src/utils/*"],
      "@btc/shared-components/locales/*": ["../../packages/shared-components/src/locales/*"],
      "@btc/shared-components/plugins/*": ["../../packages/shared-components/src/plugins/*"],
      "@btc/shared-components/charts/*": ["../../packages/shared-components/src/charts/*"],
      "@btc/shared-utils": ["../../packages/shared-utils/src", "../../packages/shared-utils/dist"],
      "@btc/shared-utils/*": ["../../packages/shared-utils/src/*", "../../packages/shared-utils/dist/*"],
      "@btc/subapp-manifests": ["../../packages/subapp-manifests/src", "../../packages/subapp-manifests/dist"],
      "@btc/subapp-manifests/*": ["../../packages/subapp-manifests/src/*", "../../packages/subapp-manifests/dist/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "../../configs/**/*.ts",
    "../../apps/**/src/app.ts",
    "../../packages/shared-core/src/**/*.ts",
    "../../packages/shared-core/src/**/*.tsx",
    "../../packages/shared-core/src/**/*.vue",
    "../../packages/shared-components/src/**/*.ts",
    "../../packages/shared-components/src/**/*.tsx",
    "../../packages/shared-components/src/**/*.vue",
    "../../packages/shared-utils/src/**/*.ts",
    "../../packages/shared-utils/src/**/*.tsx",
    "../../packages/subapp-manifests/src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "../../packages/**/dist", "../../packages/**/dist/**"]
}

