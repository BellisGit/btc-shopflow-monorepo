{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@btc/shared-core": ["../../packages/shared-core/src"],
      "@btc/shared-components": ["../../packages/shared-components/src"],
      "@btc/shared-utils": ["../../packages/shared-utils/src"],
      "@charts-types/*": ["../../packages/shared-components/src/charts/types/*"],
      "@charts-utils/*": ["../../packages/shared-components/src/charts/utils/*"],
      "@charts-composables/*": ["../../packages/shared-components/src/charts/composables/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.tsx"],
  "references": [
    { "path": "../../packages/shared-core" },
    { "path": "../../packages/shared-components" },
    { "path": "../../packages/shared-utils" }
  ]
}

