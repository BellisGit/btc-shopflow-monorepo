{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@monitor/*": ["src/*"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/src"],
      "@btc/shared-components": ["../../packages/shared-components/src"],
      "@btc/shared-utils": ["../../packages/shared-utils/src"],
      "@btc/subapp-manifests": ["../../packages/subapp-manifests/src/index.ts"],
      "@btc/subapp-manifests/*": ["../../packages/subapp-manifests/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

