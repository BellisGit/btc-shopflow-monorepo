{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@monitor/*": ["src/*"],
      "@configs": ["../../configs"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/dist"],
      "@btc/shared-components": ["../../packages/shared-components/dist"],
      "@btc/shared-utils": ["../../packages/shared-utils/dist"],
      "@btc/subapp-manifests": ["../../packages/subapp-manifests/dist"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../../configs/**/*.ts",
    "../../packages/shared-components/dist/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

