{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["node", "vitepress/client"]
  },
  "include": [
    "scripts/**/*.ts",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    "vue-shims.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".vitepress/cache",
    ".vitepress/dist"
  ]
}
