{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}

