{
  "extends": "../../packages/tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@configs": ["../../configs"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/dist/src"],
      "@btc/shared-core/*": ["../../packages/shared-core/dist/*", "../../packages/shared-core/dist/src/*"],
      "@btc/shared-components": ["../../packages/shared-components/dist"],
      "@btc/shared-components/*": ["../../packages/shared-components/dist/*"],
      "@btc/shared-utils": ["../../packages/shared-utils/dist"],
      "@btc/shared-utils/*": ["../../packages/shared-utils/dist/*"],
      "@btc/subapp-manifests": ["../../packages/subapp-manifests/dist"],
      "@btc/subapp-manifests/*": ["../../packages/subapp-manifests/dist/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/**/*.tsx", "../../configs/**/*.ts", "../../configs/**/*.d.ts", "../../packages/shared-core/dist/**/*.d.ts", "../../packages/shared-components/dist/**/*.d.ts", "../../packages/shared-utils/dist/**/*.d.ts", "../../packages/subapp-manifests/dist/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "../../packages/**/dist/**/*.js", "../../packages/**/dist/**/*.mjs"]
}

