{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@btc-components/*": ["../../packages/shared-components/src/components/*"],
    }
  },
  "include": [
    "src/config/settings/index.ts",
    "src/config/settings/layout.ts",
    "src/config/settings/menu.ts",
    "src/config/settings/theme.ts",
    "src/config/settings/ui.ts",
    "src/plugins/user-setting/config/enums.ts"
  ],
  "exclude": []
}
