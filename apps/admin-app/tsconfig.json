{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "useDefineForClassFields":  true,
                            "module":  "ESNext",
                            "lib":  [
                                        "ES2020",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "skipLibCheck":  true,
                            "moduleResolution":  "bundler",
                            "allowImportingTsExtensions":  true,
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "noEmit":  true,
                            "jsx":  "preserve",
                            "strict":  true,
                            "noImplicitAny":  false,
                            "noUnusedLocals":  false,
                            "noUnusedParameters":  false,
                            "noFallthroughCasesInSwitch":  true,
                            "types":  [
                                          "vite/client",
                                          "node"
                                      ],
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "src/*"
                                                  ],
                                          "@modules/*":  [
                                                             "src/modules/*"
                                                         ],
                                          "@services/*":  [
                                                              "src/services/*"
                                                          ],
                                          "@components/*":  [
                                                                "src/components/*"
                                                            ],
                                          "@utils/*":  [
                                                           "src/utils/*"
                                                       ],
                                          "@configs":  [
                                                           "../../configs"
                                                       ],
                                          "@configs/*":  [
                                                             "../../configs/*"
                                                         ]
                                      }
                        },
    "include":  [
                    "src/**/*.ts",
                    "src/**/*.d.ts",
                    "src/**/*.tsx",
                    "src/**/*.vue",
                    "src/env.d.ts",
                    "../../configs/**/*.ts"
                ],
    "exclude": ["node_modules", "dist"],
    "references":  [
                       {
                           "path":  "./tsconfig.node.json"
                       }
                   ]
}
