{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": false,
    "composite": false,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@layout/*": ["src/*"],
      "@system/*": ["../system-app/src/*"],
      "@/*": ["../system-app/src/*"],
      "@configs/*": ["../../packages/shared-core/src/configs/*"],
      "@btc/shared-core": ["../../packages/shared-core/dist/src"],
      "@btc/shared-core/*": ["../../packages/shared-core/dist/*", "../../packages/shared-core/dist/src/*"],
      "@btc/auth-shared": ["../../auth/shared"],
      "@btc/auth-shared/*": ["../../auth/shared/*"],
      "@workspace/locales/*": ["../../locales/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "../../configs/**/*.ts", "../../types/**/*.d.ts", "../../packages/shared-core/dist/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "../../configs/**/*.d.ts", "../../packages/**/dist/**/*.js", "../../packages/**/dist/**/*.mjs", "../../packages/shared-core/src/btc/plugins/excel/utils.ts", "../system-app/src/**/*.ts", "../system-app/src/**/*.tsx", "../system-app/src/**/*.vue", "../../auth/**"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}

