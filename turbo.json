{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", ".eslintrc.js", ".prettierrc"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".vitepress/dist/**"],
      "inputs": ["src/**/*.ts", "src/**/*.vue", "src/**/*.tsx", "src/**/*.jsx", "!src/**/*.test.ts", "!src/**/*.test.tsx", "!src/**/*.spec.ts", "!src/**/*.spec.tsx"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:unit": {
      "outputs": ["apps/admin-app/coverage/unit/**"],
      "cache": true
    },
    "test:integration": {
      "outputs": ["apps/admin-app/coverage/integration/**"],
      "cache": true
    },
    "test:e2e": {
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
