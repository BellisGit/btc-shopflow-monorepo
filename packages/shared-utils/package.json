{
  "name": "@btc/shared-utils",
  "version": "1.0.0",
  "type": "module",
  "description": "BTC ShopFlow 共享工具库",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.d.ts",
  "publishConfig": {
    "registry": "http://localhost:4873"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./error-monitor": {
      "types": "./dist/error-monitor/index.d.ts",
      "import": "./dist/error-monitor/index.mjs",
      "require": "./dist/error-monitor/index.js"
    },
    "./qiankun/load-layout-app": {
      "types": "./dist/qiankun/load-layout-app.d.ts",
      "import": "./dist/qiankun/load-layout-app.mjs",
      "require": "./dist/qiankun/load-layout-app.js"
    },
    "./cookie": {
      "types": "./dist/cookie/index.d.ts",
      "import": "./dist/cookie/index.mjs",
      "require": "./dist/cookie/index.js"
    },
    "./cdn/load-shared-resources": {
      "types": "./dist/cdn/load-shared-resources.d.ts",
      "import": "./src/cdn/load-shared-resources.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --project tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "dayjs": "^1.11.18"
  },
  "peerDependencies": {
    "qiankun": "^2.10.16"
  },
  "devDependencies": {
    "vite": "^5.4.20",
    "typescript": "^5.9.3"
  }
}
