{
  "name": "@btc/shared-components",
  "version": "1.0.0",
  "type": "module",
  "description": "BTC ShopFlow 共享组件库",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.d.ts",
  "publishConfig": {
    "registry": "http://localhost:4873"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./style.css": "./dist/style.css",
    "./styles/dark-theme.css": "./dist/styles/dark-theme.css",
    "./styles/index.scss": "./src/styles/index.scss",
    "./store/menuRegistry": {
      "types": "./src/store/menuRegistry.ts",
      "import": "./src/store/menuRegistry.ts"
    },
    "./components/layout/app-layout/utils": {
      "types": "./src/components/layout/app-layout/utils.ts",
      "import": "./src/components/layout/app-layout/utils.ts"
    },
    "./charts/utils": {
      "types": "./src/charts/utils/index.ts",
      "import": "./src/charts/utils/index.ts"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && vue-tsc --project tsconfig.build.json --skipLibCheck",
    "type-check": "vue-tsc --noEmit",
    "clean": "node scripts/clean.mjs"
  },
  "peerDependencies": {
    "@btc/shared-core": "^1.0.0",
    "@btc/shared-utils": "^1.0.0",
    "@btc/subapp-manifests": "^0.0.1",
    "@element-plus/icons-vue": "^2.0.0",
    "element-plus": "^2.0.0",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@btc/shared-core": "workspace:*",
    "@btc/shared-utils": "workspace:*",
    "@btc/subapp-manifests": "workspace:*",
    "@element-plus/icons-vue": "^2.3.2",
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^5.0.0",
    "element-plus": "^2.11.5",
    "pinia": "^2.0.0",
    "sass": "^1.93.2",
    "vite": "^5.0.0",
    "vue-router": "^4.0.0",
    "vue-tsc": "^2.0.0"
  },
  "dependencies": {
    "@vueuse/core": "^12.8.2",
    "chardet": "^2.1.0",
    "echarts": "^6.0.0",
    "lodash-es": "^4.17.21",
    "vue-echarts": "^8.0.1"
  }
}
