{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@btc-common/*": ["src/common/*"],
      "@btc-components/*": ["src/components/*"],
      "@btc-crud/*": ["src/crud/*"],
      "@btc-styles/*": ["src/styles/*"],
      "@btc-locales/*": ["src/locales/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.tsx", "src/**/*.json"]
}
