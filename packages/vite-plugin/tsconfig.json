{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@configs": ["../../configs"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-utils": ["../shared-utils/dist"],
      "@btc/shared-utils/*": ["../shared-utils/dist/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../shared-utils" }
  ]
}
