  },
  "peerDependencies": {
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.0",
    "@vue/compiler-sfc": "^3.4.0",
    "axios": "^1.6.0",
    "glob": "^10.3.0",
    "lodash": "^4.17.21",
    "magic-string": "^0.30.0",
    "prettier": "^3.0.0",
    "svgo": "^3.0.0"
  }
}
