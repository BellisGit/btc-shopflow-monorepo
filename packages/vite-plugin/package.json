{
  "name": "@btc/vite-plugin",
  "version": "1.0.0",
  "description": "BTC Vite 插件集合（EPS、SVG、Ctx 等）",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
