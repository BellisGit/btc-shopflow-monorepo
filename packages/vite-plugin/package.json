{
  "name": "@btc/vite-plugin",
  "version": "1.0.0",
  "type": "module",
  "description": "BTC Vite 插件集合（EPS、SVG、Ctx 等）",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "registry": "http://localhost:4873"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "rollup --c --bundleConfigAsCjs --watch",
    "build": "rollup --c --bundleConfigAsCjs && npm run build:types && node scripts/verify-build.mjs",
    "build:types": "tsc --project tsconfig.build.json && node scripts/fix-dts-path.mjs",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "verify-build": "node scripts/verify-build.mjs"
  },
  "peerDependencies": {
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/lodash-es": "^4.17.12",
    "@vue/compiler-sfc": "^3.4.0",
    "axios": "^1.6.0",
    "element-plus": "2.13.0",
    "glob": "^10.3.0",
    "lodash-es": "^4.17.21",
    "magic-string": "^0.30.0",
    "prettier": "^3.0.0",
    "rollup": "^4.52.5",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "svgo": "^3.0.0",
    "tslib": "^2.8.1"
  }
}
