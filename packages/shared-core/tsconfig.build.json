{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@btc/shared-utils": ["./node_modules/@btc/shared-utils/dist/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts", "../shared-utils"]
}

