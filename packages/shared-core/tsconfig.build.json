{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@btc/shared-utils": ["../shared-utils/dist"],
      "@btc/shared-utils/*": ["../shared-utils/dist/*"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-components": ["../shared-components/dist"],
      "@btc/shared-components/*": ["../shared-components/dist/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}

