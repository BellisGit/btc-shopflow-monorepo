{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "skipLibCheck": true,
    "paths": {
      "@configs": ["../../configs"],
      "@configs/*": ["../../configs/*"],
      "@btc/shared-components": ["../shared-components/dist"],
      "@btc/shared-components/*": ["../shared-components/dist/*"],
      "@btc/shared-utils": ["../shared-utils/src"],
      "@btc/shared-utils/*": ["../shared-utils/src/*"],
      "@btc/auth-shared": ["../../auth/shared"],
      "@btc/auth-shared/*": ["../../auth/shared/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

