{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@configs/*": ["../../configs/*"],
      "@btc/shared-components": ["../shared-components/dist"],
      "@btc/shared-components/*": ["../shared-components/dist/*"],
      "@btc/shared-utils": ["../shared-utils/dist"],
      "@btc/shared-utils/*": ["../shared-utils/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../shared-utils" }
  ]
}
