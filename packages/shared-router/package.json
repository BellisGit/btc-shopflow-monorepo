{
  "name": "@btc/shared-router",
  "version": "2.0.0",
  "type": "module",
  "description": "BTC ShopFlow 共享路由库，提供通用的路由守卫工厂函数",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "http://localhost:4873"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && node scripts/verify-build.mjs",
    "type-check": "tsc --noEmit --project tsconfig.type-check.json",
    "verify-build": "node scripts/verify-build.mjs"
  },
  "peerDependencies": {
    "@btc/shared-core": "^2.0.0",
    "vue": "^3.3.0",
    "vue-router": "^4.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^5.4.20",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.3.0",
    "vue-router": "^4.0.0"
  }
}

