{
  "name": "btc-shopflow-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BTC ShopFlow 微前端项目",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "echo 'Husky disabled - manual checks only'",
    "preinstall": "echo 'Skipping only-allow check'",
    "check:circular": "node scripts/check-circular-deps.mjs",
    "cmd": "node scripts/commands/index.mjs",
    "release": "node scripts/release-version.mjs",
    "dev": "node scripts/dev-all.mjs",
    "dev:app": "node scripts/turbo.js run dev --filter=$npm_config_app",
    "dev:all": "node scripts/turbo.js run dev --concurrency=20",
    "predev:all": "node scripts/turbo.js run build --filter=@btc/vite-plugin --filter=@btc/shared-utils --filter=@btc/shared-core --filter=@btc/shared-components --filter=@btc/subapp-manifests --force",
    "build:share": "node scripts/turbo.js run build --filter=@btc/shared-components --filter=@btc/shared-core --filter=@btc/shared-utils --filter=@btc/subapp-manifests --force",
    "prebuild:all": "node scripts/clean-cache.mjs",
    "prebuild": "pnpm check:circular",
    "build:all": "node scripts/turbo.js run build",
    "build:app": "node scripts/turbo.js run build --filter=$npm_config_app",
    "build:system": "pnpm --filter system-app build",
    "build:admin": "pnpm --filter admin-app build",
    "build:logistics": "pnpm --filter logistics-app build",
    "build:quality": "pnpm --filter quality-app build",
    "build:production": "pnpm --filter production-app build",
    "build:engineering": "pnpm --filter engineering-app build",
    "build:finance": "pnpm --filter finance-app build",
    "build:layout": "pnpm --filter layout-app build",
    "build:operations": "pnpm --filter operations-app build",
    "build:docs": "pnpm --filter docs-app build",
    "build-dist:all": "node scripts/build-to-dist.mjs",
    "build-dist:system": "pnpm build:system && node scripts/build-to-dist.mjs --app system-app",
    "build-dist:admin": "pnpm build:admin && node scripts/build-to-dist.mjs --app admin-app",
    "build-dist:logistics": "pnpm build:logistics && node scripts/build-to-dist.mjs --app logistics-app",
    "build-dist:quality": "pnpm build:quality && node scripts/build-to-dist.mjs --app quality-app",
    "build-dist:production": "pnpm build:production && node scripts/build-to-dist.mjs --app production-app",
    "build-dist:engineering": "pnpm build:engineering && node scripts/build-to-dist.mjs --app engineering-app",
    "build-dist:finance": "pnpm build:finance && node scripts/build-to-dist.mjs --app finance-app",
    "build-dist:layout": "pnpm build:layout && node scripts/build-to-dist.mjs --app layout-app",
    "build-dist:operations": "pnpm build:operations && node scripts/build-to-dist.mjs --app operations-app",
    "build-dist:docs": "pnpm build:docs && node scripts/build-to-dist.mjs --app docs-app",
    "copy:eps": "node scripts/copy-eps-from-system.mjs",
    "preview:all": "node scripts/turbo.js run preview --concurrency=20",
    "preview:app": "node scripts/turbo.js run preview --filter=$npm_config_app",
    "build-preview:app": "node scripts/build-preview.mjs $npm_config_app",
    "build-preview:all": "node scripts/build-preview.mjs --all",
    "setup:docker": "bash scripts/setup-docker-remote.sh",
    "build-deploy:app": "bash scripts/build-and-push-local.sh $npm_config_app --auto-deploy",
    "build-deploy:all": "bash scripts/build-deploy-all.sh",
    "build-deploy:app:full": "pnpm build:app --app=$npm_config_app && pnpm deploy:app --app=$npm_config_app && pnpm deploy:static:app --app=$npm_config_app",
    "build-deploy:k8s": "bash scripts/build-deploy-incremental-k8s.sh",
    "build-deploy:k8s:all": "bash scripts/build-deploy-incremental-k8s.sh --all",
    "build-deploy:k8s:app": "bash scripts/build-deploy-incremental-k8s.sh --apps $npm_config_app",
    "build:k8s": "bash scripts/build-incremental-k8s.sh",
    "build:k8s:all": "bash scripts/build-incremental-k8s.sh --all",
    "build:k8s:app": "bash scripts/build-incremental-k8s.sh --apps $npm_config_app",
    "deploy:k8s": "bash scripts/deploy-incremental-k8s.sh",
    "deploy:k8s:all": "bash scripts/deploy-incremental-k8s.sh --all",
    "deploy:k8s:app": "bash scripts/deploy-incremental-k8s.sh --apps $npm_config_app",
    "deploy:app": "bash scripts/deploy-app-local.sh $npm_config_app",
    "deploy:all": "bash scripts/trigger-deploy.sh --apps system-app,admin-app,logistics-app,quality-app,production-app,engineering-app,finance-app,mobile-app",
    "deploy:static": "bash scripts/deploy-static.sh",
    "deploy:static:all": "bash scripts/deploy-static.sh --all",
    "deploy:static:app": "bash scripts/deploy-static.sh --app $npm_config_app",
    "build-deploy:static:all": "node scripts/build-deploy-static-all.js",
    "build-deploy:static:app": "pnpm build:app --app=$npm_config_app && pnpm deploy:static:app --app=$npm_config_app",
    "bps:all": "bash scripts/bps-all.sh",
    "lint": "node scripts/turbo.js run lint",
    "lint:all": "node scripts/commands/lint.mjs",
    "lint:app": "node scripts/turbo.js run lint --filter=$npm_config_app",
    "lint:fix": "node scripts/commands/lint.mjs $npm_config_app --fix",
    "lint:check-docs": "node scripts/check-orphan-docs.js",
    "test:unit": "pnpm --filter admin-app test:unit",
    "test:integration": "pnpm --filter admin-app test:integration",
    "test:e2e": "pnpm exec playwright test",
    "test:ci": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:deployment": "node scripts/test-deployment.mjs",
    "test:deployment:all": "node scripts/test-deployment.mjs --all",
    "test:deployment:app": "node scripts/test-deployment.mjs --app",
    "format": "prettier --write \"packages/**/*.{ts,tsx,vue,json,md}\"",
    "type-check": "node scripts/turbo.js run type-check",
    "type-check:all": "node scripts/commands/type-check.mjs",
    "type-check:app": "node scripts/turbo.js run type-check --filter=$npm_config_app",
    "ts-error-stats": "node scripts/commands/ts-error-stats.mjs",
    "ts-error-reports": "node scripts/generate-ts-error-reports.mjs",
    "lint-error-reports": "node scripts/generate-lint-error-reports.mjs",
    "clean": "node scripts/turbo.js run clean && rm -rf node_modules",
    "clean:vite": "node scripts/clean-vite-cache.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@element-plus/icons-vue": "^2.3.2",
    "@playwright/test": "^1.48.2",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@unocss/preset-attributify": "^66.5.2",
    "@unocss/preset-icons": "^66.5.2",
    "@unocss/preset-uno": "^66.5.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.0",
    "husky": "^9.1.7",
    "iconv-lite": "^0.7.0",
    "lint-staged": "^16.2.3",
    "madge": "^8.0.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "unocss": "^66.5.2",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-element-plus": "^0.10.0",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^5.4.20",
    "vite-plugin-inspect": "^11.3.3",
    "vite-plugin-qiankun": "^1.0.15",
    "vue-i18n": "^11.0.1"
  },
  "dependencies": {
    "ali-oss": "^6.20.0",
    "file-saver": "^2.0.5",
    "xlsx": "^0.18.5"
  }
}
