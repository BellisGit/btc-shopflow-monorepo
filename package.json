{
  "name": "btc-shopflow-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BTC ShopFlow 微前端项目",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "echo 'Husky disabled - manual checks only'",
    "preinstall": "echo 'Skipping only-allow check'",
    "dev": "chcp 65001 >nul && concurrently -n \"admin,logistics,system,finance,engineering,quality,production,docs\" -c \"bgBlue.bold,bgGreen.bold,bgCyan.bold,bgMagenta.bold,bgYellow.bold,bgRed.bold,bgMagenta.bold,bgCyan.bold\" \"pnpm run dev:admin\" \"pnpm run dev:logistics\" \"pnpm run dev:system\" \"pnpm run dev:finance\" \"pnpm run dev:engineering\" \"pnpm run dev:quality\" \"pnpm run dev:production\" \"pnpm run dev:docs\"",
    "predev:all": "node scripts/turbo.js run build --filter=@btc/vite-plugin --force",
    "dev:all": "node scripts/turbo.js run dev --concurrency=15",
    "dev:admin": "pnpm --filter admin-app dev",
    "dev:logistics": "pnpm --filter logistics-app dev",
    "dev:system": "pnpm --filter system-app dev",
    "dev:finance": "pnpm --filter finance-app dev",
    "dev:engineering": "pnpm --filter engineering-app dev",
    "dev:quality": "pnpm --filter quality-app dev",
    "dev:production": "pnpm --filter production-app dev",
    "dev:docs": "pnpm --filter docs-site-app dev",
    "prebuild:all": "node scripts/clean-cache.mjs",
    "build:all": "node scripts/turbo.js run build",
    "lint": "node scripts/turbo.js run lint",
    "lint:fix": "eslint \"packages/**/src/**/*.{ts,tsx,vue}\" --fix",
    "lint:docs": "node scripts/check-orphan-docs.js",
    "test:unit": "pnpm --filter admin-app test:unit",
    "test:integration": "pnpm --filter admin-app test:integration",
    "test:e2e": "pnpm exec playwright test",
    "test:ci": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "format": "prettier --write \"packages/**/*.{ts,tsx,vue,json,md}\"",
    "type-check": "node scripts/turbo.js run type-check",
    "tsc:all": "node scripts/turbo.js run type-check",
    "tsc:admin": "pnpm --filter admin-app type-check",
    "tsc:logistics": "pnpm --filter logistics-app type-check",
    "tsc:system": "pnpm --filter system-app type-check",
    "tsc:finance": "pnpm --filter finance-app type-check",
    "tsc:engineering": "pnpm --filter engineering-app type-check",
    "tsc:quality": "pnpm --filter quality-app type-check",
    "tsc:production": "pnpm --filter production-app type-check",
    "clean": "node scripts/turbo.js run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@unocss/preset-attributify": "^66.5.2",
    "@unocss/preset-icons": "^66.5.2",
    "@unocss/preset-uno": "^66.5.2",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.0",
    "husky": "^9.1.7",
    "iconv-lite": "^0.7.0",
    "lint-staged": "^16.2.3",
    "only-allow": "^1.2.1",
    "@playwright/test": "^1.48.2",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "unocss": "^66.5.2",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-element-plus": "^0.10.0",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^5.4.20",
    "vite-plugin-inspect": "^11.3.3",
    "vite-plugin-qiankun": "^1.0.15",
    "vue-i18n": "^11.0.1"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "xlsx": "^0.18.5"
  }
}
